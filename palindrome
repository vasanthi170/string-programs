#given string is palindrome or not
s   = 'malayalam'
res = ''
for ch in s:
    res = ch + res
if s == res:
    print('palindrome')
else:
    print('not a palindrome')


#given string is palindrome or not..using for loop
s   = 'madam'
res = ''
for ind in range(0,len(s)//2):
    if s[ind] != s[-ind-1]:
        print('Not a Palindrome')
        break
else:
    print('palindrome')

#given string is palindrome or not..using while loop
s   = 'madam'
res = ''
ind = 0
while ind != len(s)//2:
    if s[ind] != s[-ind-1]:
        print('Not a Palindrome')
        break
    ind = ind+1
else:  
    print('Palindrome')
